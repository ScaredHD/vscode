{
    // editor setting
    "editor.fontSize": 18,
    "editor.fontFamily": "Fira Code, 思源黑体",
    "editor.fontLigatures": false,
    
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "One Dark Pro",

    // IMPORTANT !!!
    // onlySnippets: Tab complete snippets when their prefix match. 
    // Works best when 'quickSuggestions' aren't enabled.
    "editor.tabCompletion": "onlySnippets",
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    
    "editor.acceptSuggestionOnEnter": "off",
    "editor.wordWrap": "on",

    // Controls whether a top border is drawn on modified (dirty) editor tabs or not.
    "workbench.editor.highlightModifiedTabs": true,
    "breadcrumbs.enabled": false,
    
}
